{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "~/config": ["config"],
      "~/utils": ["utils"]
    },
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2019"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/templates/**/*"
  ]
}
